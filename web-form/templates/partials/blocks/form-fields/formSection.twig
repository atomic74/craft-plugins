{% if matrixBlock.showDivider %}
  <hr>
{% endif %}

<div class="form-section">
  <input type="hidden" name="fields[{{ matrixBlock.inputName }}][label]" value="{{ matrixBlock.sectionTitle }}">
  <input type="hidden" name="fields[{{ matrixBlock.inputName }}][value]" value="__section__">
  <h2>{{ matrixBlock.sectionTitle }}</h2>
  {% if matrixBlock.description is not empty %}
    {{ matrixBlock.description }}
  {% endif %}
</div>
