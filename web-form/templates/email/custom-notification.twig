{# Import the form helper macros #}
{% import 'partials/macros/form-helpers' as fh %}

{% embed 'email/_base' %}

  {% block subject %}
    {{ subject }}
  {% endblock %}

  {% block body %}
    <h2>Contact Information</h2>
    <p>
      {# Provide your own label if it either does not exist or you want it to be different #}
      <strong>Full name:</strong>
      {# Output any form field value anywhere in the custom email notification #}
      {{ fh.formFieldValue(fields.first_name) }} {{ fh.formFieldValue(fields.last_name) }}
    </p>
    <p>
      <strong>Address:</strong><br>
      {{ fh.formFieldValue(fields.address_street) }}<br>
      {{ fh.formFieldValue(fields.address_city) }}, {{ fh.formFieldValue(fields.address_state) }} {{ fh.formFieldValue(fields.address_zip) }}
    </p>
    <h2>Additional Information</h2>
    <p>
      {# Use the label generated by the form field #}
      <strong>{{ fh.formFieldLabel(fields.interested_in) }}:</strong>
      {{ fh.formFieldValue(fields.interested_in) }}
    </p>
    <p>
      <strong>{{ fh.formFieldLabel(fields.contact_reference) }}:</strong>
      {{ fh.formFieldValue(fields.contact_reference) }}
    </p>
  {% endblock %}

{% endembed %}
