{# Import the email helper macros #}
{% import '_plugins/webform/macros/email-helpers' as eh %}

{% extends '_layouts/email' %}

{% block subject %}
  {{ subject }}
{% endblock %}

{% block body %}
  <h2>Contact Information</h2>
  <p>
    {# Provide your own label if it either does not exist or you want it to be different #}
    <strong>Full name:</strong>
    {# Output any form field value anywhere in the custom email notification #}
    {{ eh.formFieldValue(fields.first_name) }} {{ eh.formFieldValue(fields.last_name) }}
  </p>
  <p>
    <strong>Address:</strong><br>
    {{ eh.formFieldValue(fields.address_street) }}<br>
    {{ eh.formFieldValue(fields.address_city) }}, {{ eh.formFieldValue(fields.address_state) }} {{ eh.formFieldValue(fields.address_zip) }}
  </p>
  <h2>Additional Information</h2>
  <p>
    {# Use the label generated by the form field #}
    <strong>{{ eh.formFieldLabel(fields.interested_in) }}:</strong>
    {{ eh.formFieldValue(fields.interested_in) }}
  </p>
  <p>
    <strong>{{ eh.formFieldLabel(fields.contact_reference) }}:</strong>
    {{ eh.formFieldValue(fields.contact_reference) }}
  </p>
{% endblock %}
